{% set label = params.label | enforced %}
{% set href = params.href | enforced %}
{% set target = params.target %}
{% set page = params.page %}
{% set ariaLabel = params.ariaLabel %}

<a 
{% if href %} href="{{ href }}" {% endif %} 
{% if target %} href="{{ target }}" {% endif %} 
{% if ariaLabel %} href="{{ ariaLabel }}" {% endif %} 
{% if href == page.url %} aria-current="page" {% endif %}
>
    {% if label %}
        {{ label }}
    {% endif %}
</a>